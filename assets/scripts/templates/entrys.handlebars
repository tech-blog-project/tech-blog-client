{{#each entrys as |entry|}}
  <div class="card" data-id="{{entry.id}}">

    <section class="row">
      <section class="col-6">
        <div class="card-header">{{entry.title}} by {{entry.owner.email}}<!--, id is {{entry.id}}--> </div>
        <div class="card-body">
          <p class="card-text">{{entry.text}}</p>
        </div>
        <div>
          <button type="button" id="edit-id-button" class="btn btn-dark" data-id="{{entry._id}}" user="{{entry.owner._id}}" title="{{entry.title}}" text="{{entry.text}}" data-toggle="modal" data-target="#updateModal" data-whatever="update_entry">EDIT</button>
          <button id="delete-button" class="btn btn-dark" data-id="{{entry.id}}" user={{entry.owner._id}} value="{{entry._id}}" name="entry[id]">Delete Entry</button>
        </div>
      </section>

      <div class="card-footer col-6">
        <section class="comments">
          {{#each entry.comments as |comment|}}
            <p> ID:{{comment.owner}}  commented... <p>
            <p> {{comment.text}} </p><!-- id {{comment.id}} -->
            <button class="btn btn-info" value="edit" id="edit-comment-button" data-id="{{comment.id}}" user="{{entry.owner._id}}" text="{{comment.text}}" data-toggle="modal" data-target="#updateCommentModal" data-whatever="update_comment">edit</button>
            <button class="btn btn-danger" value="delete" id="delete-comment-button" data-id="{{comment.id}}" name="comment[id]">delete</button>
          {{/each}}
        </section>
        <form id="comment-form" value="{{entry.id}}">
          <textarea name="comment[text]" id="comments" style="width:96%;height:90px;padding:2%;font-size:1.2em;">>
        </textarea>
          <div>
            <button class="btn btn-info" value="comment">comment</button>
          </div>
        </form>
      </div>
  </section>
  </div>
{{/each}}
